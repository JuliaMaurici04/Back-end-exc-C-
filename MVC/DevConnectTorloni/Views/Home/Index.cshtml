@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model DevConnectTorloni.Models.Usuario;
@{
    ViewData["Title"] = "DevConnect - Login";
}
<link rel="stylesheet" href="~/css/login.css">


<script defer>
    const usuarioNovoCadastrado = "@TempData[key: "usuarioNovoCadastro"]";

    if (usuarioNovoCadastrado == "Cadastrado") {
        alert("Usuario cadastrado com sucesso 😁");
    }
</script>

@* <h1>Tela principal login</h1> *@
<main>
    <div>
        <form id="formulario" class="estilo-formulario">
            <img src="../images/logo-devconnect2.svg" alt="">

            <div>
                <label for="">Nome de Usuario:</label>
                <input type="text" name="" id="">
            </div>

            <div>
                <label for="">Senha:</label>
                <input type="password" name="" id="">
            </div>

            <button type="submit" class="formulario-botao-azul">Entrar</button>

            <p>ou</p>

            <a href="#">Esqueceu a senha?</a>


        </form>

        <section id="cadastro" class="estilo-formulario">
            <p>Nao tem uma conta? <a asp-controller="Usuario" asp-action="Index">Cadastre-se</a> </p>
        </section>

        <p class="informacao-aplicativo">Obtenha o aplicativo</p>

        <section id="secao-istalacao">
            <img src="../images/app-store.svg" alt="Imagem informando para baixar no app store.">
            <img src="../images/google-play.svg" alt="Imagem informando para baixar no play store.">
        </section>

    </div>
</main>